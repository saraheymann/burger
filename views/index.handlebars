{{!--setup to have the template that handlebars can render onto--}}
{{!--create a button that will submit the user input into the database--}}
 <div class="body">
 <center>
   <br>
   <br>
        <div class="row">
          <img src="/assets/img/burger.png">
        </div>
      </center>

      <!-- Page Title -->
      <center>
        <h1 class="mainTitle">Eat da Burger!</h1>
      </center>
      
      <br>
<div class="row">
  <center>
    <!-- Left side (ready to eat) -->
    <div class="col-md-6">
      <h4 class="title">Order is ready!</h4>
      <div id="ready_to_eat">

        <!--Insert new burgers here -->
        {{#each burgers}}
          {{#unless devoured}}
          <form action="{{item_id}}" method="POST">
            <div class="input-group orders">
              <li class="form-control">{{item_id}}. {{burger_name}}</li>
                <span class="input-group-btn">
                  <button class="btn btn-success devour-button" type="submit">Devour It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>

    <!-- Right side (already eaten) -->
    <div class="col-md-6">
      <h4 class="title">Already eaten!</h4>
      <div id="already_eaten">

        <!-- Insert Eaten Burgers Here -->
        {{#each burgers}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control">{{this.item_id}}. {{this.burger_name}}</li>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>
 <br><br>

      <!-- Input New Burgers Form -->
      <form action="burger/create" method="POST"> 
        
       
        <div class="row">
      
          <div class="col-md-3"></div> 

          <!-- Burger Input Box -->
          <div class="form-group col-md-6">
            <center><label for="new_burger" class="title">Create your burger!</label></center>
            <textarea class="form-control" columns="8" rows="4" id="new_burger" name="burger_name"></textarea>
          </div>

          
          <div class="col-md-3"></div> 
        </div>
      
        <!-- Submit Button -->
        <center>
          <button id="submit-button" type="submit" class="btn btn-danger">Place Order</button>
        </center>

      </form>
      <br>
      <br>
 </div>


   
